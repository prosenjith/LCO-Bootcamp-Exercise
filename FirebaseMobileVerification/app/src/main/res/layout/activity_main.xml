<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number_id"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Enter Number"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/otp_id"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="Enter OTP"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/number_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/number_id"
        app:layout_constraintTop_toBottomOf="@+id/number_id" />

    <Button
        android:id="@+id/send_number_btn_id"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#CDDC39"
        android:text="number"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/send_opt_btn_id"
        app:layout_constraintStart_toStartOf="@+id/otp_id"
        app:layout_constraintTop_toBottomOf="@+id/otp_id" />

    <Button
        android:id="@+id/send_opt_btn_id"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="152dp"
        android:background="#CDDC39"
        android:text="opt"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/otp_id"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toEndOf="@+id/send_number_btn_id"
        app:layout_constraintTop_toBottomOf="@+id/otp_id" />
</android.support.constraint.ConstraintLayout>